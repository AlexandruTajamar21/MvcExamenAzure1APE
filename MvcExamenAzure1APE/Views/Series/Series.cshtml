@model IEnumerable<MvcExamenAzure1APE.Models.Serie>

@{
    ViewData["Title"] = "Series";
}

<h1>Series</h1>

<p>
    <a asp-controller="Series" asp-action="InsertPersonaje" class="btn btn-success">Insertar Personaje</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.IdSerie)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.NombreSerie)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Imagen)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Puntuacion)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Año)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.IdSerie)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.NombreSerie)
            </td>
            <td>
                <img src="@item.Imagen" style="width:350px;height:300px" />
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Puntuacion)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Año)
            </td>
            <td>
                <a asp-controller="Series" asp-action="UpdateSerie" asp-route-idSerie="@item.IdSerie" class="btn btn-success">Update</a>
                <a asp-controller="Series" asp-action="Details" asp-route-idSerie="@item.IdSerie" class="btn btn-info">Detalles</a>
                <a asp-controller="Series" asp-action="Personajes" asp-route-idSerie="@item.IdSerie" class="btn btn-success">Personajes</a>
            </td>
        </tr>
}
    </tbody>
</table>
